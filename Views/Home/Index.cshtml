@using AJI.Models
@model IEnumerable<AJI.Models.Post>

@{
    ViewData["Title"] = "Home";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@if (Model == null)
{
    <p>There are no posts yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th>Date Created</th>
            <th>Date Modified</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @($"{p.Title}")
                </td>
                <td>
                    @($"{p.Body}")
                </td>
                <td>
                    @($"{p.Author.UserName}")
                </td>
                <td>
                    @($"{p.CreatedOn}")
                </td>
                <td>
                    @($"{p.ModifiedOn}")
                </td>
            </tr>
        }
    </table>
}