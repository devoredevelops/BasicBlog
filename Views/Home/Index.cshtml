@using BasicBlog.Models
@model IEnumerable<BasicBlog.Models.Post>

@{
    ViewData["Title"] = "Welcome to BasicBlog!";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@if (Model == null)
{
    <p>There are no posts yet!</p>
}
else
{
    @foreach (var p in Model)
    {
        <article>
            <h4>@($"{p.Title}")</h4>
            <h5>By <a href="mailto:@($"{p.Author.UserName}")">@($"{p.Author.UserName}")</a> - Created on: @($"{p.CreatedOn}") - Modified on: @($"{p.ModifiedOn}")<h5>
            <p>@($"{p.Body}")</p>
        </article>
        <br />
    }
}