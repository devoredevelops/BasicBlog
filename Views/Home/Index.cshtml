@using AJI.Models
@model IEnumerable<AJI.Models.Post>

@{
    ViewData["Title"] = "Welcome to AJI!";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<img src="/images/AJI.png" />

<br />

@if (Model == null)
{
    <p>There are no posts yet!</p>
}
else
{
    @foreach (var p in Model)
    {
        <article>
            <h4>@($"{p.Title}")</h4>
            <h5>By <a href="mailto:@($"{p.Author.UserName}")">@($"{p.Author.UserName}")</a><h5>
            <h6>Created on: @($"{p.CreatedOn}") - Modified on: @($"{p.ModifiedOn}")</h6>
            <p>@($"{p.Body}")</p>
        </article>
        <br />
    }
}