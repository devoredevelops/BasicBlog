@using AJI.Models
@model IEnumerable<AJI.Models.Post>

@{
    ViewData["Title"] = "Administration";
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Author</th>
        <th>Date Created</th>
        <th>Date Modified</th>
        <th></th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>
                @($"{p.Title}")
            </td>
            <td>
                @($"{p.Body}")
            </td>
            <td>
                @($"{p.Author.UserName}")
            </td>
            <td>
                @($"{p.CreatedOn}")
            </td>
            <td>
                @($"{p.ModifiedOn}")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.PostId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@p.PostId">Delete</a>
            </td>
        </tr>
    }
</table>